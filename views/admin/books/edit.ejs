<h1>Edit a book</h1>
<form action="/admin/books/<%=book.id%>?_method=put" method="post">
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%=book.title%>">
    </div>
    <div>
        <label for="author">Author</label>
        <input type="text" id="author" name="author" value="<%=book.author%>">
    </div>
    <div>
        <label for="genre">Genre</label>
        <select name="genre" id="genre">
            <option value="Fiction" <%=book.genre === "Fiction" ? "selected" : ""%>>Fiction</option>
            <option value="Non-fiction" <%=book.genre === "Non-fiction" ? "selected" : ""%>>Non-fiction</option>
        </select>
    </div>
    <div>
        <label for="isbn">ISBN</label>
        <input type="text" id="isbn" name="isbn" value="<%=book.isbn%>">
    </div>
    <div>
        <label for="publisher">Publisher</label>
        <input type="text" id="publisher" name="publisher" value="<%=book.publisher%>">
    </div>
    <div>
        <label for="year">Year</label>
        <input type="number" min="1900" max="2099" step="1" id="year" name="year" value="<%=book.year%>"/>
    </div>
    <div>
        <label for="quantity">Quantity in Stock</label>
        <input type="number" min="0" step="1" id="quantity" name="quantity" value="<%=book.quantity%>"/>
    </div>
    <div>
        <label for="price">Price</label>
        <input type="number" min="0" step="0.01" id="price" name="price" value="<%=book.price.replace('$', '')%>">
    </div>
    <button type="submit">Confirm changes</button>
</form>
<a href="/admin/books/">Return to books</a>